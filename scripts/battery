[[ ! -d '/sys/class/power_supply/AC' ]] && exit

plugged_in="$(cat /sys/class/power_supply/AC/online)"

cap=100
for battery in /sys/class/power_supply/BAT*; do
	cap=$((($(cat "$battery/capacity") + $cap) / 2))
done

((plugged_in)) && echo -n '+' || echo -n '-'
echo "$cap%"
