CARD="${1:-0}"
MIXER="${2:-default}" # use pulse for pulseaudio, default is alsa

AMIXER="amixer -c $CARD -M -D $MIXER get Master"

case $BLOCK_BUTTON in
    5) amixer -q sset Master 10%- ;;   # scroll down
    4) amixer -q sset Master 10%+ ;;   # scroll up
    2) amixer -q sset Master toggle ;; # middle click
    1) amixer -q sset Master 10% ;;    # left button click
    3) amixer -q sset Master 100% ;;   # right button click
esac

STATUS=$($AMIXER | awk -F '[\[\]]' '{print $4}' | tail -1)

if [ "$STATUS" == "on" ]
then
$AMIXER |
	sed -n 's/^[^:]*: Playback [0-9]* \[\([0-9]*%\)\] .*/â™ª \1/p' |
	head -n1
else
    echo -e "MUTE\n"
    echo "#FF0000"
fi

killall -USR2 i3blocks
exit
