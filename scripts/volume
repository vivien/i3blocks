CARD="${1:-0}"
MIXER="${2:-default}" # use pulse for pulseaudio, default is alsa

amixer -c $CARD -M -D $MIXER get Master |
	sed -n 's/^[^:]*: Playback [0-9]* \[\([0-9]*%\)\] .*/â™ª: \1/p' |
	head -n1
